# Nginx configuration for Everest deployment
# This configuration helps prevent MIME type issues and properly handles rate limiting

server {
    listen 80;
    server_name everest12.com www.everest12.com;

    # Client (Frontend) - Serve static files
    location / {
        root /var/www/everest/client/dist;
        try_files $uri $uri/ /index.html;
        
        # Cache static assets
        location ~* \.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
            add_header X-Content-Type-Options "nosniff";
        }
        
        # Don't cache HTML files
        location ~* \.html$ {
            expires -1;
            add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate";
        }
    }

    # Backend API - Proxy to Node.js server
    location /api/ {
        proxy_pass http://localhost:5002;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Increase timeouts for API requests
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Backend uploads - Serve static files
    location /uploads/ {
        proxy_pass http://localhost:5002;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        
        # Cache uploaded files
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
}

# Backend subdomain configuration
server {
    listen 80;
    server_name everest-db.everest12.com;

    location / {
        proxy_pass http://localhost:5002;
        proxy_http_version 1.1;
